/*===============
    #Code edit
===============*/
.highlight-code slide.current {
  pre > * {
    opacity: 0.25;
    smoothTransition()
  }
  b {
    opacity: 1;
  }
}
[contenteditable="true"], [contenteditable] {
  display: block;
  resize: both;
  min-height: 4em;
  border: 1px dashed transparent;
  &:focus, &:active{
    outline: none;
    border: 1px dashed colorNeturalLightest;
  }
}
pre{
  max-height: 12em;
  overflow-y: scroll;
}
pre, [contenteditable="true"], [contenteditable] {
  font-family: 'Source Code Pro', 'Courier New', monospace;
  font-size: 1.25em;
  line-height: 1.4;
  padding: 10px 0 10px 3em;
  letter-spacing: -1px;
  margin-bottom: 1em;
  width: 106%;
  background-color: $gray-1;
  left:  3em;
  position: relative;
  overflow: scroll;
  /*overflow: hidden;*/

  &[data-lang]:after {
    content: attr(data-lang);
    background-color: colorNeutralDarkest;
    right: 8px;
    top: 0;
    position: absolute;
    font-size: .5em;
    color: white;
    padding: 2px .618em;
    text-transform: uppercase;
    border-radius: 0 0 3px 3px;
  }
}

pre[data-lang="go"] {
  color: #333;
}

code {
  font-size: 95%;
  font-family: 'Source Code Pro', 'Courier New', monospace;
  color: black;
}
figure{
  pre{
    flex-basis: 17.5em;
    height: 100%;
    overflow-y: scroll;
    overflow-x: hidden;
  }
}
/* Pretty print */

.prettyprint .str, /* string content */
.prettyprint .atv { /* a markup attribute value */
  color: colorCool; //rgb(0, 138, 53);
}
.prettyprint .kwd, /* a keyword */
.prettyprint .tag { /* a markup tag name */
  color: rgb(0, 102, 204);
}
.prettyprint .com { /* a comment */
  color: $gray-3; //rgb(127, 127, 127);
  font-style: italic;
}
.prettyprint .lit { /* a literal value */
  color: rgb(127, 0, 0);
}
.prettyprint .pun, /* punctuation, lisp open bracket, lisp close bracket */
.prettyprint .opn,
.prettyprint .clo {
  color: colorNeutralDarkest; //rgb(127, 127, 127);
}
.prettyprint .typ, /* a type name */
.prettyprint .atn, /* a markup attribute name */
.prettyprint .dec,
.prettyprint .var { /* a declaration; a variable name */
  color: colorWarm; //rgb(127, 0, 127);
}
.prettyprint .pln {
  color: colorNeutralDarkest;
}