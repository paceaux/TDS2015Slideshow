    #Main Area
===============*/


/*===============
    #Slide Navigation
===============*/

.slideNav {
  display: block;
  overflow-y: scroll;
  border-right: 12px solid colorNeutralDarkest;
  height: 80vh;
  width: sideWidth;
  margin: 0 1.618em 0 0;
  flex-shrink: 0;
  smoothTransition();
  &__link {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    height: 25%;
    width: (sideWidth - 15);
    border: 2px solid colorCool;
    margin: 0 0 .618em 0
    overflow: hidden;
    * {
      color: #343434;
    }
    .slide {
      padding: 0;
      height: auto;
      width: auto;
      transform-origin: top center;
      transform: scale(.9, .4);
    }
  }
  &.ui-collapsed {
    width: 0;
  }
}
/*===============
    #Slides
===============*/

.slides {
    position: relative;
    display: flex;
    height: 80vh;
    width: unquote('calc(100vw - ') sideWidth unquote(')');
    overflow: hidden;
}
.slide {
    flex-shrink: 0;
    flex-grow: 0;
    position: relative;
    float:left;
    display: inline-flex;
    flex-direction: column;
    padding: 1.618rem .618em;
    height: 100%;
    width: unquote('calc(100vw - ') sideWidth unquote(')');
    border-radius: 4px;
    margin: 0 0vw 0 0;
    background-color: #DAE4EC;
    transition: .25s all ease-in-out;
    justify-content: space-between;
    smoothTransition();
    &__header {

    }
    &__footer {
        font-size: .85em;
    }
    &.ui-current {
      
    }
    &.ui-prev {
        margin-left: -100vw;

    }
    &.ui-next {

    }
    
}
.ge-footer {
    display: flex;
    flex-grow: 0;
    flex-shrink: 1;
    height: 49px;
    width: 100%;
    flex-direction: column;
    align-items: center;
    &__legalese {
        color: colorNeutralLightest
    }
}


/*===============
    #Transition effects
===============*/

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
.fadeIn {
  animation-name: fadeIn
  animation-duration: .75s;
}