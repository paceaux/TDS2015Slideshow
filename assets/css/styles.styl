@import ('normalize.css');
@import ('vars');
@import ('mixins');
@import (nib);

* {
  box-sizing: border-box;
}

html {
    font-family: fontBody;
    font-size: 100%;
    line-height: 1.618;
    min-height: 100%;
    overflow: visible;
}
body {
    display: flex;
    overflow-y: hidden;
    flex-direction: column;
    color: colorNeutralDarkest;
    font-size: 1rem;
    min-height: 100vh;
    
}
h1, h2, h3, h4, h5, h6 {
    color: colorCool
    letter-spacing: .1ch;
    font-family: fontHeaders;
    font-weight: bold;
    margin: 0 0 .618rem 0;
}

p {
  margin: 1.618rem 0 .618em 0;  
}
a {
  text-decoration: none;
  outline: none;
  &:hover, &:focus, &:active {

  }
}
table {
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
thead {
  order: -1;
}
tbody {
  flex-grow: 1;
}
tfoot {
  order: 1;
}
thead,
tbody,
tfoot {
  display: inherit;
  flex-direction: inherit;
  justify-content: space-between;
  align-items: stretch;
}
tr {
  display: inherit;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  flex-grow: 1;
}
td,
th {
  flex-basis: 15%;
  flex-grow: 2;
  text-align: left;
}
.table--reverse {
  flex-direction: row;
  min-height: 8em;
}
.table--reverse tr {
  flex-direction: column;
}
/*===============
    #Layout
===============*/
headerHeight = 8vh;
sideWidth = 350px;
footerHeight= 35px;

.ge-header,
.ge-footer {
    display: flex;
    flex-grow: 0;
    flex-shrink: 1;
    padding: .618rem;
}
.ge-header {
    flex-direction: row;
    width: 80%
    height: 120px;
    min-height: headerHeight;
    flex-wrap: wrap;
    &__title, &__subtitle {
        margin: 0;
        
    }
    &__title {
      margin: 50px 0 0 150px;
    }
    &__subtitle {
      flex-grow: 1;
    }
    &__logo {
      width: 279px;
      height: 93px;
      position: absolute;
      z-index: -1;
    }
}
.main {
    display: flex;
    flex-grow: 1;
    padding: .618rem;
    flex-basis: 75vh;
    height: unquote('calc(100vh - ')headerHeight unquote(' - ')footerHeight unquote(')');
    overflow: hidden;
}
